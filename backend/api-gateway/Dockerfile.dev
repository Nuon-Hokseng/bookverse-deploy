# Development Dockerfile with nodemon for hot-reload
FROM node:24-alpine

WORKDIR /usr/src/app

# Install nodemon globally
RUN npm install -g nodemon

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Create logs directory
RUN mkdir -p logs

# Expose port
EXPOSE 3000

# Start with nodemon for development
CMD ["npm", "run", "dev"]
