# ===================================
# BookVerse Production Environment
# ===================================
# Copy this to .env.production and fill in your actual values
# NEVER commit .env.production to git!

# Docker Hub Configuration
DOCKER_USERNAME=your-dockerhub-username

# MongoDB Atlas Connection Strings
AUTH_MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/auth-service?retryWrites=true&w=majority
BOOK_MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/book-service?retryWrites=true&w=majority
CART_MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/cart-service?retryWrites=true&w=majority
ORDER_MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/order-service?retryWrites=true&w=majority

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this

# Service Authentication Token
CART_SERVICE_TOKEN=your-service-token-change-this

# Redis Configuration (after creating on Render)
REDIS_URL=redis://red-xxxxx:6379

# Render Service URLs (fill in after deploying services)
AUTH_SERVICE_URL=https://bookverse-auth-service.onrender.com
BOOK_SERVICE_URL=https://bookverse-book-service.onrender.com
CART_SERVICE_URL=https://bookverse-cart-service.onrender.com
ORDER_SERVICE_URL=https://bookverse-order-service.onrender.com
API_GATEWAY_URL=https://bookverse-api-gateway.onrender.com

# Frontend URL (after deploying frontend)
FRONTEND_URL=https://your-app.vercel.app
